{
  "name": "mirror-addon",
  "fullName": "Mirror",
  "version": "1.0.0",
  "keywords": [
    "pusher",
    "websocket",
    "synchronization"
  ],
  "description": "Mirror the current screen between all app instances (via the URL!)",
  "joshfire": {
    "debugmode": true,
    "images": {},
    "hooks": [
      "startfile",
      "bootstrap"
    ],
    "options": {
      "schema": {
        "pusherAppKey": {
          "type": "string",
          "title": "Pusher APP KEY"
        },
        "secret": {
          "type": "string",
          "title": "The secret hash to become master (no space)."
        }
      }
    }
  }
}